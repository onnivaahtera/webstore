generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(cuid())
  email         String  @unique
  password      String
  role          String
  fname         String
  lname         String
  streetAddress String
  postalCode    String
  city          String
  phone         String
  orders        Order[]
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  product Product[]
}

model Product {
  id         Int      @id @default(autoincrement())
  categoryId Int
  name       String
  url        String
  price      Int
  desc       String
  image      String
  category   Category @relation(fields: [categoryId], references: [id])
  Order      Order[]
}

model Order {
  id             Int       @id @default(autoincrement())
  userId         String
  user           User      @relation(fields: [userId], references: [id])
  products       Product[]
  cardNumber     BigInt
  cvc            Int
  expirationDate String
}

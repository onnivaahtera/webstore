generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  username String  @unique
  email    String  @unique
  password String
  fname    String
  lname    String
  orders   Order[]
}

model Admin {
  id       String @id @default(cuid())
  username String
  password String
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  product Product[]
}

model Product {
  id         Int      @id @default(autoincrement())
  categoryId Int
  name       String
  url        String
  price      Int
  desc       String
  image      String
  category   Category @relation(fields: [categoryId], references: [id])
}

model Order {
  id         Int    @id @default(autoincrement())
  userId     String
  user       User   @relation(fields: [userId], references: [id])
  address    String
  city       String
  postalCode Int
  phone      String
  productId  Int
  quantity   Int
}
